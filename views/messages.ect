<!DOCTYPE html>
<html>
  <head>
   <title>MY MESSAGES</title>
   <% include 'layouts/layout_messages' %>
   <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
   <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
   <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap-theme.min.css">
   <meta http-equiv="X-UA-Compatible" content="IE=edge">
   <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
   <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
   <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
   <script language="javascript">
    function LoadMessages(){
     $.ajax({
       url : "http://localhost:3000/messages",
       type : "get",
       success : function (data){
         var ms = data;
         var output = "";
         var l = data.length;
         var i = 0;
         var j = 0;
         for (i = 0; i < l - 1; i++) {
           for (j = i; j < l; j++){
             if (ms[i].date < ms[j].date){
               var temp = undefined;
               temp = ms[i];
               ms[i] = ms[j];
               ms[j] = temp;
             }
           }
         }
         for (i = 0; i < l; i++) {
           output += "<div id=\"" + i + "\"";
           if (i % 4 == 0){
             output += " class=\"bg-success\">" 
           }
           if (i % 4 == 1){
             output += " class=\"bg-info\">" 
           }
           if (i % 4 == 2){
             output += " class=\"bg-warning\">" 
           }
           if (i % 4 == 3){
             output += " class=\"bg-danger\">" 
           }
   
           if (ms[i].read == 0) {
             output += "<h5><b>" + ms[i].content + "</b></h5>" + "<br>Date: " + ms[i].date + "<br>From: " + ms[i].from.username + "</div>";
           }
           else {
             output += "<h5>" + ms[i].content + "</h5>" + "<br>Date: " + ms[i].date + "<br>From: " + ms[i].from.username + "</div>";
           }
         }
         document.getElementById("result").innerHTML = output;
       }
     });
     }

    function newmess()
    {
      $.ajax({
        url : "http://localhost:3000/newmess", 
            type : "get",
            dateType:"jsonp",
            success : function (){
                window.location.assign("http://localhost:3000/newmess")
            },
            error : function(){
              window.location.assign("http://localhost:3000/messages")
            }
      });
    }

    </script>
  </head>
  <body>

  	<div class="container">
      <form class="form" name = "dsuser" action="dsuser" method="get" accept-charset="utf-8">
      <input type="submit" class="btn btn-success" value= "My Friends"/>
      
      <button type="button" class="btn btn-primary" onclick= "newmess()" >Create Message</button>  
      
      <button type="button" class="btn btn-info">Send Messages</button>
     </form>
     <h1>Please check your messages.</h1>
      <div id="result" class="col-md-8">
      </div>
    <script>
      LoadMessages()
    </script>
		
	</div>

  </body>
</html>